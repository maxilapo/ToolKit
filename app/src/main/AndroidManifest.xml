<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.maxime.toolkit">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.maxime.toolkit.ProductGalleryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.maxime.toolkit.MainActivity"/>
        <activity android:name="com.maxime.toolkit.GifsActivity"/>
        <activity android:name="com.maxime.toolkit.ProductDetailPage"/>
        <activity android:name="com.maxime.toolkit.RatingPage">
        </activity>
    </application>

</manifest>