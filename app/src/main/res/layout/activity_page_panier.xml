<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="com.maxime.toolkit.page.pagePanier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relative_Bottom"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Cart"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/panier_ProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_Bottom"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/pagePanier_txtSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Subtotal : "
            android:textColor="#949494"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/pagePanier_txtTaxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pagePanier_txtSubtotal"
            android:layout_centerInParent="false"
            android:layout_marginStart="10dp"
            android:text="Taxes :"
            android:textColor="#949494"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/pagePanier_txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pagePanier_txtTaxes"
            android:layout_centerInParent="false"
            android:layout_marginStart="10dp"
            android:text="Total : 33.32$"
            android:textColor="#545454"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/pagePanier_btnCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"

            android:background="@drawable/rounded_rectangle"
            android:padding="8dp"
            android:text="Checkout"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"/>
    </RelativeLayout>

</RelativeLayout>
