<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="com.maxime.toolkit.page.pagePayment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="Payment"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relative_Bottom"
        android:layout_below="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/pagePayment_cbCardType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/card_type_array"
                android:prompt="@string/card_type_prompt"/>

            <EditText
                android:id="@+id/pagePayment_txtCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Card Number"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/pagePayment_txtCardHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Card Holder"
                />

            <Spinner
                android:id="@+id/pagePayment_cbMonth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/month_array"/>

            <Spinner
                android:id="@+id/pagePayment_cbYear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/year_array"/>

            <EditText
                android:id="@+id/pagePayment_txtCVV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="CVV"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relative_Bottom"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/pageCheckout_txtSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Subtotal : "
            android:textColor="#949494"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/pageCheckout_txtTaxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pageCheckout_txtSubtotal"
            android:layout_centerInParent="false"
            android:layout_marginStart="10dp"
            android:text="Taxes :"
            android:textColor="#949494"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/pageCheckout_txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pageCheckout_txtTaxes"
            android:layout_centerInParent="false"
            android:layout_marginStart="10dp"
            android:text="Total : 33.32$"
            android:textColor="#545454"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/pagePayment_btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"

            android:background="@drawable/rounded_rectangle"
            android:padding="8dp"
            android:text="Confirm âž¡"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"/>
    </RelativeLayout>

</RelativeLayout>